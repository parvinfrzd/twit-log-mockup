<%- include('../partials/header') %>
    <form id="add-ticket" action="/category" method="POST">
        <label>Label:</label>
        <input name="name" type="text" class="form-control" required>
        <br>

        <input type="submit" value="Add Category" class="btn btn-primary">
    </form>
    <br><br><br>
    <div class="container d-flex justify-content-center">
        <% categs.forEach(function(categ) { %>
            <a href="/category/<%= categ._id %>" class="btn btn-info column w-25 p-5">
                <%= categ.name %>
                    <%if (categ.tweet.length> 0 ) { %>
                        <%= categ.tweet.length %>
                            <% } %>
            </a>
            <!-- <button type="button" class="btn btn-info column w-25 p-5">
                <%= categ.name %>
            </button> -->
            <% }) %>
    </div>


    <%- include('../partials/footer') %>