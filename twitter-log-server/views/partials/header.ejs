    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title class="cover-heading">
        <%= title %>
    </title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light d-flex  bd-highlight" style="background-color: #e3f2fd;">
        <% if (user) { %>
            <a class="navbar-brand mr-auto p-2" href="#">Twitter Log
                <img src="/docs/4.1/assets/brand/bootstrap-solid.svg" width="30" height="30" alt="">
            </a>

            <a class="nav-link" href="/search">Search Hashtag</a>
            <!--  -->
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    Tweet Logs
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/tweets">All Tweets</a>
                    <a class="dropdown-item" href="/categories">Categories</a>
                </div>
            </li>
            <!--  -->
            <a class="nav-link" href="/trends">Trends</a>
            <a class="nav-link" href="/info">About</a>
            <a class="nav-link" href="/logout">Log Out</a>
            <% } else { %>
                <a class="navbar-brand mr-auto p-2" href="#">Twitter Log
                    <img src="/docs/4.1/assets/brand/bootstrap-solid.svg" width="30" height="30" alt="">
                </a>
                <a class="nav-link disabled" href="/search">Search Hashtag</a>
                <!--  -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Tweet Logs
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/tweets">All Tweets</a>
                        <a class="dropdown-item" href="/categories">Categories</a>
                    </div>
                </li>
                <!--  -->
                <a class="nav-link disabled" href="/trends">Trends</a>
                <a class="nav-link" href="/info">About</a>
                <a class="nav-link" href="/auth/google">Login with Google</a>
                <% } %>


    </nav>
    <main>
        <h1>
            <%= title %>
        </h1>