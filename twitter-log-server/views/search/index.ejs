<%- include('../partials/header') %>

    <p>
        <%= title %>
    </p>
    <form action="/" method="GET">
        <label>Search any hastag, starting with #</label>
        <input type="text" id="fname" name="hashtag"><br><br>
        <label>How many tweets?</label>
        <input type="number" name="count" min="0"><br><br>
        <input type="submit" value="Search Tweet">
    </form>

    <%if (tweets) { %>
        <%tweets.forEach(t=> { %>
            <h3 class="text-center text-info">
                <%=t%>
            </h3>
            <%})%>
                <% } else { %>
                    <h3 class="text-center text-info">
                        results are not in
                    </h3>
                    <%}%>
                        <%- include('../partials/footer') %>