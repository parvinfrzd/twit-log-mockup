<%- include('../partials/header') %>

    <form action="/trends" method="GET">
        <label>Search trending tweet within these locations</label>
        <select name="woeid" class="form-select" aria-label="Default select example">
            <option selected>Open this select menu</option>
            <option value="2459115">NewYork</option>
            <option value="2442047">Los Angeles</option>
            <option value="4118">Toronto</option>
            <option value="1105779">Sydney</option>
            <option value="44418">London</option>
            <option value="2295019">New Delhi</option>
            <option value="638243">Berlin</option>
            <option value="766273">Madrid</option>
            <option value="721943">Rome</option>
            <option value="615702">Paris</option>

        </select><br><br>
        <button class="btn btn-primary" type="submit">Search Trend</button>
    </form>


    <!-- <%if(result.length > 0){%> -->
    <div class="container">
        <% result.forEach(function(t) { %>

            <button type="button" class="btn btn-info column">
                <%= t.name %>
                    <%= t.tweet_volume %>
            </button>
            <!-- <div class="col-sm"> -->

            <% }); %>
    </div>
